# Application
APP_NAME=Qosan
APP_ENV=production
APP_KEY=base64:GENERATE_THIS_KEY_USING_php_artisan_key:generate
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_PORT=8000

# Database - MySQL
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=qosan
DB_USERNAME=qosan
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here
DB_EXTERNAL_PORT=3306

# Redis
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
REDIS_HOST=redis
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379
REDIS_EXTERNAL_PORT=6379

# Session
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Mail (configure based on your mail service)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@qosan.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=info

# Other
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
